{% block script %}
<script>
function StateRibbon (itemid,state) {
    switch(itemid) {
        default:
            alert(itemid);
    }
    GlobalRefresh();    
}

function ClickRibbon (itemid,state) {
    switch(itemid) {
    case 'index':
        window.location = "{{ url('arii_Admin_index') }}";
        break;
    case 'connections':
        window.location = "{{ url('arii_Admin_connections') }}";
        break;
    case 'categories':
        window.location = "{{ url('arii_Admin_categories') }}";
        break;
    case 'databases':
        window.location = "{{ url('arii_Admin_repositories') }}";
        break;
    case 'nodes':
        window.location = "{{ url('arii_Admin_nodes') }}";
        break;
    case 'spoolers':
        window.location = "{{ url('arii_Admin_spoolers') }}";
        break;
    case 'sites':
        window.location = "{{ url('arii_Admin_sites') }}";
        break;
    case 'users':
        window.location = "{{ url('arii_Admin_users') }}";
        break;
    case 'teams':
        window.location = "{{ url('arii_Admin_teams') }}";
        break;
    default:
        alert(itemid);
    }
}
</script>
{% endblock script %}