toolbar.attachEvent("onStateChange", function(id,state) {
    switch (id) {
        case 'deploy':
            if (state) {
                mygrid.expandAll();
            }
            else {
                mygrid.collapseAll();
            }
            break;
        case 'show_time':
            mygrid.setColumnHidden(9,!state);
            break;
        case 'history':
            if (state) {
                max_history = 20;
            }
            else {
                max_history = 0;
            }
            GridRefresh();
            break;
        case 'ordered':
            if (state) {
