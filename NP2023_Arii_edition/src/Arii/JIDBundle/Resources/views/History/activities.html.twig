             GridRefresh();
            break;
        case 'gantt':
            mygrid.setColumnHidden(5,state);      
            mygrid.setColumnHidden(6,state);      
            mygrid.setColumnHidden(7,state);  
            mygrid.setColumnHidden(8,state);   
            mygrid.setColumnHidden(9,!state);  
            break;
        default:
