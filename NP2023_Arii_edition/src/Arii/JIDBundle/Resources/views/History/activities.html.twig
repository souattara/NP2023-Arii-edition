/* Gestion du menu contextuel */
function onButtonClick(menuitemId, type) {
    var data = mygrid.contextID.split("_");
    //rowInd_colInd;
    var rId = data[0];
    var cInd = data[1];
//     mygrid.setRowTextStyle(data[0], "color:" + menuitemId.split("_")[1]);
    // alert("rId "+rId+" cInd "+cInd);
    switch (menuitemId) {

       case "show_info":
            JobInfo( rId );
        break;
        case "doc":
            window.open('{{ url('arii_JID_job_doc') }}?id='+rId,'arii_doc');
            break;
       case "show_history":
            document.location.href = "{{ url('arii_JID_history_job') }}?id="+rId;
        break;
        case "start_task":
            StartJob( rId );
        break;
        case "show_why":
            ShowWhy( rId);
            break;
        case "kill":
            KillJob( rId );
            break;
        case "stop":
            StopJob( rId );
        break;
        case "unstop":
            UnstopJob( rId );
        break;
        case "pause_spooler":
            PauseSpooler(rId);
        break;
        case "continue_spooler":
            ContinueSpooler(rId);
        break;
        case "check_spooler":
            CheckSpooler(rId);
        break;
        case "terminate_spooler":
            TerminateSpooler(rId);
        break;
        case "abort_spooler":
            AbortSpooler(rId);
        break;
        case "purge":
            PurgeJob( rId );
        break;
        default:
            alert(menuitemId);    
    }
    return true;
}

var dhxCalendar;
