        break;
        case "pause_spooler":
            PauseSpooler(rId);
        break;
        case "continue_spooler":
            ContinueSpooler(rId);
        break;
        case "check_spooler":
            CheckSpooler(rId);
        break;
        case "terminate_spooler":
