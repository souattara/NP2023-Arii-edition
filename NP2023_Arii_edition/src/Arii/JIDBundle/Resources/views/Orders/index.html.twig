//                alert("{{ url('arii_XML_Command') }}?command="+itemid+"&order_id="+id);
                dhx4.ajax.post("{{ url('arii_XML_Command') }}","command="+itemid+"&order_id="+id,function(loader,response){
                    dhtmlx.message({
