                <!--[if !IE]>start section content top<![endif]-->
                <div class="sct">
                        <div class="sct_left">
                                <div class="sct_right">
                                        <div class="sct_left">
                                                <div class="sct_right">
<div id="pie_chart_container" style="width:280px;height:250px;"></div>
                                                       
<script>
var barChart;
barChart =  new dhtmlXChart({
        view:"donut",
        container:"pie_chart_container",
        value:"#FILES#",
        label:"",
        tooltip:"#STATUS#",
        color:function(obj){
            if (obj.STATUS == 'success' ) return "#ccebc5";
            return "#fbb4ae";
        },
        gradient:false,
        border:false,
        legend:{
	             width: 0,
                     template: "#STATUS#"
                }
})
barChart.load( "{{ url('db_graph_pie_send') }}" );
</script>

                                                </div>
                                        </div>
                                </div>
                        </div>
                </div>
